@{
    ViewData["Title"] = "Login";
    Layout = null;
        Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Login</title>

    <style>
        body {
            background: #f0f2f5;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 40px; /* ترفعه فوق شوي */
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            animation: fadeIn 0.5s ease-in-out;
        }

        .login-title {
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
            color: #0d6efd;
        }

        .form-control {
            border-radius: 6px;
            margin-top: 10px;
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        .btn-primary {
            border-radius: 6px;
            background-color: #0d6efd;
            border: none;
            padding: 10px;
            width: 100%;
            color: white;
            font-size: 1rem;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .form-check-label {
            font-size: 0.9rem;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .error {
            color: red;
            text-align: center;
            margin-bottom: 15px;
        }

    </style>
</head>

<body>
    <div class="login-wrapper">
        <div class="login-card">
            <h3 class="login-title">Login</h3>

            @* عرض رسالة الخطأ *@
            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="mobileNumber" class="form-label">Mobile Number</label>
                    <input type="text" name="mobileNumber" class="form-control" value="@ViewBag.MobileNumber" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" />
                </div>
         
                <button type="submit" class="btn-primary">Login</button>
            </form>
        </div>
    </div>
</body>
</html>