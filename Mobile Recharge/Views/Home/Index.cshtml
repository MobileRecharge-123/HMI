    }

        .action-button:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

     fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .carousel-inner img {
        animation: fadeInUp 0.6s ease-in-out;
    }
</style>
